page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {

  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .nr {

  flex: 2;
}
.cates .cates_container .nr .zb {

  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .nr .active {
  

  display: flex;
  color: var(--themeColor);
  border-left: 5rpx solid  red;
  color: red;
}
.cates .cates_container .right {

  flex: 5;
}
.cates .cates_container .right .goods_group .goods_title {
  height: 100rpx;
  display: flex;
}
.gd {
 margin-left: 300rpx;
}
.cates .cates_container .right .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.cates .cates_container .right .goods_group .goods_list navigator image {
  width: 50%;
}
.tp{
  width: 99%;
height: 200rpx;
margin-top: 10rpx;
}

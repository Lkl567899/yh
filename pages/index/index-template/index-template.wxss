@import "../../../styles/iconfont.wxss";
.popular-list{
  width: 31%;
  padding: 10rpx 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  text-align: center;
  background: #FFF;
  border-radius: 5px;
  box-shadow: 0 5px 10px 0 rgb(0 0 0 / 30%);
}
.popular-list-img{
  padding-top: 10rpx;
  width: 100%;
  height: 230rpx;
}
.popular-list-img image{
  width: 100%;
}
.popular-list-name{
  height: 80rpx;
  font-size: 28rpx;
  white-space: normal;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.popular-list-money{
  font-size: 26rpx;
  text-align: left;
  color: rgb(219, 27, 20);
  margin-top: 10rpx;
}


.goods-info{
  width: 42%;
  padding: 10rpx;
  box-shadow: 0 5px 10px 0 rgb(0 0 0 / 30%);
  margin: 10rpx 0;
}

.goods-image{
  min-height: 320rpx;
}
.goods-image image{
  width: 100%;
}

.goods-name{
  font-size: 36rpx;
  color: #222;
  line-height: 2.8;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-sale{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-price{
  font-size: 34rpx;
  color: #f00;
}

.goods-sales .icon-gouwuche{
  font-size: 46rpx;
  color: #bbb;
}
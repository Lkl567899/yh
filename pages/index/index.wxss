/**index.wxss**/
@import "../../styles/iconfont.wxss";
@import "index-template/index-template.wxss";
.search{
  padding: 0 30rpx;
}
.index_swiper swiper {
  width: 750rpx;
  height: 340rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.index_swiper swiper image {
  width: 100%;
}
.index_cate {
  display: flex;
}
.index_cate navigator {
  padding: 20rpx;
  flex: 1;
}
.index_cate navigator image {
  width: 100%;
}

.info{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  background: #FFF;
  color: #bbb;
}

.popular{
  width: 100%;
  border-top: 1px solid rgb(228, 228, 228);
}
.popular-box{
  width: 100%;
  background: linear-gradient(to bottom, rgb(6, 188, 243) 0%,rgb(6, 188, 243) 40%,white 1%,white 100%);
  overflow: hidden;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.popular-title{
  width: 100%;
  height:80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.p_tex{
  font-size: 30rpx;
  color: #FFF;
}
.popular-more{
  line-height: 30rpx;
  padding: 10rpx 28rpx;
  background: rgb(165, 204, 223);
  border-radius: 13px;
  font-size: 25rpx;
  color: #FFF;
}
.popular-item_box{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
}

.hot-title{
  font-size: 38rpx;
  font-weight: bold;
  margin: 20rpx 0;
  text-align: center;
}

.hot-goods-box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}


.toTop{
  width: 70rpx;
  height: 70rpx;
  position: fixed;
  right: 7%;
  bottom: 10%;
  background-color: #e1e1e1;
  text-align: center;
  line-height: 70rpx;
  border-radius: 50%;
  transition: .35s;
}
.icon-arrowupshangjiantou{
  font-size: 42rpx;
  color: #909399;
  margin: auto;
}